{
  "name": "electron-json-rpc",
  "version": "1.1.1",
  "description": "JSON-RPC implementation for Electron",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./main": {
      "types": "./dist/main.d.mts",
      "import": "./dist/main.mjs"
    },
    "./preload": {
      "types": "./dist/preload.d.mts",
      "import": "./dist/preload.mjs"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.mts",
      "import": "./dist/renderer/index.mjs"
    },
    "./renderer/client": {
      "types": "./dist/renderer/client.d.mts",
      "import": "./dist/renderer/client.mjs"
    },
    "./renderer/builder": {
      "types": "./dist/renderer/builder.d.mts",
      "import": "./dist/renderer/builder.mjs"
    },
    "./renderer/event": {
      "types": "./dist/renderer/event.d.mts",
      "import": "./dist/renderer/event.mjs"
    },
    "./stream": {
      "types": "./dist/stream.d.mts",
      "import": "./dist/stream.mjs"
    },
    "./event": {
      "types": "./dist/event.d.mts",
      "import": "./dist/event.mjs"
    },
    "./debug": {
      "types": "./dist/debug.d.mts",
      "import": "./dist/debug.mjs"
    }
  },
  "scripts": {
    "lint": "oxlint",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "typecheck": "tsc --noEmit",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "prepublishOnly": "bun run typecheck && bun run lint && bun run test:run && bun run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/bun": "latest",
    "@types/node": "^25.0.8",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "electron": "^39.2.7",
    "happy-dom": "^20.3.1",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "semantic-release": "^25.0.2",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "electron": "*"
  }
}
